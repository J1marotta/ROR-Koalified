<!-- side menu -->


<header id="header" class="alt">
	<h1>
		<a href="index.html">Koalified</a>
	</h1>
	<nav id="nav">
		<ul>
			<li class="special">
				<a href="#menu" class="menuToggle">
					<span>Menu</span>
				</a>
				<div id="menu">
					<ul>

						<li>
							<!--  If the user is signed in show options directly -->
							<h3><%= button_to("Home", root_url, method: :get) %>
						</li>
						<% if user_signed_in? %>
						<li>
						<%= button_to('Profile', profile_path, method: :get) %>
						</li>
							<li>
							<%= button_to("GO", go_path, method: :get) %>
							</li>
						<br/>
						<br/>
						<br/>
						<br>
							<li>
							<%= button_to('Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }) %>
							</li>

							<!--Not signed in, show sign up or login  -->
						<% else %>
							<li>
							<%= button_to('Login', new_user_session_path)  %>
							</li>
							<li>
								<%= button_to("Register", new_user_registration_url, method: :get) %>
							</li>
						<% end %>
						</ul>
					</div>
				</li>
			</ul>
		</nav>

	</header>
